<h1>All Entries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= entry.body %></td>
        <td><%= entry.category_name %></td>
        <td><%= link_to 'Show', entry, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', entry, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Add Entry', new_entry_path, class: "btn btn-warning" %><br>
